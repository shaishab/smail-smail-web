extends ../layouts/layout

block topbar
	include ../topbar/signInTopbar

block content
	div.row-fluid.text-center(style="color: #737171;")
		h2 Sign in to continue to Smail
	div.row-fluid.text-center
		div.col-sm-4.col-md-4.col-dm-offset-4.col-sm-offset-4.signin-box
			img.img-responsive.img-circle.profile-avatar(src="/img/common/default-avatar.png")
			form.form-horizontal
				div.form-group
					label.sr-only.control-label(for='userMail') Email
					div
						input#userMail.form-control(type='email', placeholder='Email')
				div.form-group
					label.sr-only.control-label(for='userPassword') Password
					div
						input#userPassword.form-control(type='password', placeholder='Password')
				div.form-group
					button.btn.btn-primary.btn-lg.btn-block(type='submit') Sign in
				div.form-group
					div.col-sm-12.col-md-12
						div.col-sm-6.col-md-6.checkbox(style="padding-top: 0;")
							label
								input(type='checkbox')
								|Remember me
						div.col-sm-6.col-md-6
							a(href="#") Forgot password?
				

block footer
	include ../footer/welcomeFooter